class ReverseArray {
    public static void main(String[] args) {
        int [] arr = {1,2,3,4};
        int [] brr = new int[arr.length];
        for(int i=0;i<arr.length;i++){
            brr[arr.length-i-1]=arr[i];
        }
        for(int i=0;i<brr.length;i++){
            System.out.println(brr[i]);
        }
        
    }
}
